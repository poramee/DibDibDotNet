                                <div class="right">
                                <i onclick="document.form2.input2.value++"
                                class="btn-plus material-icons md-24 rc-Primary ">add</i>
                                </div> *@
                            <input asp-for="Amount" class="input-num" name="Amount" />
                        </div>
                        <input class="btn-pop-remove rc-BG TH ParagraphX1 right " type="submit" value="ลบ">
                    </form>

                </div>
            </div>
        </div>
