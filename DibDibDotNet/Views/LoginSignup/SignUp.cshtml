<body class="BGG">
    <div class="parent-BG">
        <!-- left-->
        <div class="contain-col-1-Logo">
            <div class="container-Logo">
                <div class="container-text-logo">
                    <h1 class="HeadingX3 ENG rc-Accent">DIB</h1>
                    <h1 class="HeadingX3 ENG rc-Muted">DIB</h1>
                </div>
                <div class="container-icon-logo">
                    <i class="material-icons md-100 rc-Warning">looks</i>
                </div>
            </div>
            <div class="container-text-preview">
                <br class="brr md-h20">
                <h1 class="HeadingX5 ENG rc-Primary">Software Studio</h1><br class="brr md-h20">
                <p class="ParagraphX1 ENG rc-Primary">
                    Laboratory equipment reservation website<br>
                    Convenient, safe and fast<br>
                    Electric, Control and Computer Building<br>
                    ECC KMITL
                </p>
            </div>
        </div>
        <!-- righ -->
        <div class="contain-col-2-Form DS-SS">
            <form asp-action="SignUp">
                <div class="section-row-1">
                    <h1 class="HeadingX4 ENG rc-Primary">Create an account</h1><br class="brr md-h20">
                    <p class="ParagraphX1 ENG rc-Primary">Already have an account?</p><br class="brr md-h5">
                    <a class="no-line login ParagraphX1 ENG rc-Accent" href="@Url.Action("Logout", "LoginSignup")"
                        target="_parent">Login</a>
                </div>

                <div class="form-group section-row-2">
                    <span class=" ParagraphX2 ENG rc-Primary">FullName</span><br class="brr md-h5">
                    <input asp-for="FullName" class="form-control input-login" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="section-row-4">
                    <span class="ParagraphX2 ENG rc-Primary">Email</span><br class="brr md-h5">
                    <input asp-for="Email" class="input-login" type="email" name="email">
                </div>
                <div class="section-row-5">
                    <span class="ParagraphX2 ENG rc-Primary">Password</span><br class="brr md-h5">
                    <input asp-for="Password" class="input-login" type="password" name="password">
                </div>
                <div class="section-row-6">
                    <span class="ParagraphX2 ENG rc-Primary">Confirm Password</span><br class="brr md-h5">
                    <input class="input-login" type="password" name="confirm-password">
                    @* <span asp-validation-for="ConfirmPassword" style="color: red;padding-top: 8px;"></span> *@
                </div>
                <div class="section-row-7">
                    <input class="btn-login rc-BG ENG HeadingX6" type="submit" value="Sign Up"><br class="brr md-h20">
                    <a class="no-line login ParagraphX1 ENG rc-Accent" href="@Url.Action("HomeAdmin", "HomeAdmin")"
                        target="_parent">Admin</a> <br>
                    <a class="no-line login ParagraphX1 ENG rc-Accent" href="@Url.Action("HomeUser", "HomeUser")"
                        target="_parent">User</a>
                </div>
            </form>
        </div>
